<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onagi.onataxi.onataxi.Main3Activity">

    <ImageView
        android:id="@+id/janam"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/janam" />

    <TextView
        android:id="@+id/driver_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="Driver & Vehicle Details"
        android:textColor="@color/almostWhite"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/CofC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/driver_details"
        android:layout_margin="8dp"
        android:textColor="@color/lighter"
        android:text="Driving licence C of C No." />

    <TextView
        android:id="@+id/conduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/CofC"
        android:layout_margin="8dp"
        android:textColor="@color/lighter"
        android:text="Good Conduct Upload" />

    <TextView
        android:id="@+id/ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/conduct"
        android:layout_margin="8dp"
        android:textColor="@color/lighter"
        android:text="National ID Number/Passport" />

    <TextView
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ID"
        android:layout_margin="8dp"
        android:textColor="@color/lighter"
        android:text="Vehicle Registration Number" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registration"
        android:layout_margin="8dp"
        android:textColor="@color/lighter"
        android:text="Vehicle Age" />

    <TextView
        android:id="@+id/cubic_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/age"
        android:layout_margin="8dp"
        android:textColor="@color/lighter"
        android:text="Vehicle Cubic Capacity" />

    <TextView
        android:id="@+id/insurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cubic_capacity"
        android:layout_margin="8dp"
        android:textColor="@color/lighter"
        android:text="Vehicle Insurance Details"/>

    <TextView
        android:id="@+id/psv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/insurance"
        android:layout_margin="8dp"
        android:textColor="@color/lighter"
        android:text="Driver PSV Details" />

    <TextView
        android:id="@+id/fleet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/psv"
        android:layout_margin="8dp"
        android:textColor="@color/almostWhite"
        android:text="Fleet Management" />
    <Button
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/darkblue"
        android:textColor="@color/lighter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"/>
</RelativeLayout>
